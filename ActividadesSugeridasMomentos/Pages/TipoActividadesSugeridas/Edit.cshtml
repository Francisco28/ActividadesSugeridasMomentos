@page
@model ActividadesSugeridasMomentos.Pages.TipoActividadesSugeridas.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h2>Editar Tipo de Actividad Sugerida</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="eva_cat_tipo_actividades_sugeridas.IdTipoActividadSug" class="control-label">Id</label>
            <input asp-for="eva_cat_tipo_actividades_sugeridas.IdTipoActividadSug" class="form-control" disabled />
            <div class="form-group">
                <label asp-for="eva_cat_tipo_actividades_sugeridas.DesTipoActividadSug" class="control-label">Descripción de actividad</label>
                <input asp-for="eva_cat_tipo_actividades_sugeridas.DesTipoActividadSug" class="form-control" />
                <span asp-validation-for="eva_cat_tipo_actividades_sugeridas.DesTipoActividadSug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info btn-md active" role="button" asp-page="./Index">Regresar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
